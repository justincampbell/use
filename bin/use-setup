#!/bin/bash

USE_DIR=${USE_DIR:-$HOME/.use}

use_unalias() {
  unalias -a
}

use_home() {
  source $HOME/.profile
}

use_company() {
  if [[ "$1" != "" ]]; then
    USE_PROFILE=$USE_DIR/$1/.profile

    if [[ ! -f $USE_PROFILE ]]; then
      echo "$USE_PROFILE not found"
      return 1
    fi

    source $USE_PROFILE
  fi
}

use() {
  use_unalias
  use_home
  use_company $1
}
